<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Flagship Banner LR Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items
            jcr:primaryType="nt:unstructured"
            sling:hideChildren="[column]">
            <basic
                jcr:primaryType="nt:unstructured"
                jcr:title="BASIC"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <animationPosition
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Animation Position"
                                name="./animationPosition">
                                <items jcr:primaryType="nt:unstructured">
                                    <left
                                        jcr:primaryType="nt:unstructured"
                                        text="Left"
                                        value="Left"/>
                                    <right
                                        jcr:primaryType="nt:unstructured"
                                        text="Right"
                                        value="Right"/>
                                </items>
                            </animationPosition>
                            <animationEffect
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Animation Effect"
                                name="./animationEffect">
                                <items jcr:primaryType="nt:unstructured">
                                    <none
                                        jcr:primaryType="nt:unstructured"
                                        text="None"
                                        value=""/>
                                    <bottom-top
                                        jcr:primaryType="nt:unstructured"
                                        text="bottom-top"
                                        value="up"/>
                                    <top-bottom
                                        jcr:primaryType="nt:unstructured"
                                        text="top-bottom"
                                        value="down"/>
                                    <left-right
                                        jcr:primaryType="nt:unstructured"
                                        text="left-right"
                                        value="right"/>
                                    <right-left
                                        jcr:primaryType="nt:unstructured"
                                        text="right-left"
                                        value="left"/>
                                </items>
                            </animationEffect>
                            <desktopImage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="Desktop Background Image"
                                name="./desktopImage"
                                rootPath="/content/dam/huawei-cbg-site"/>
                            <desktopBackgroundColor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Desktop Background Color"
                                name="./desktopBackgroundColor"/>
                            <mobileImage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="Mobile Background Image"
                                name="./mobileImage"
                                rootPath="/content/dam/huawei-cbg-site"/>
                            <mobileImageAlt
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Mobile Background Image Alt"
                                name="./mobileImageAlt"/>
                            <animationImage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="Animation Image"
                                name="./animationImage"
                                rootPath="/content/dam/huawei-cbg-site"/>
                            <animationImageAlt
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Animation Image Alt"
                                name="./animationImageAlt"/>
                            <titleImage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="Title Image"
                                name="./titleImage"
                                rootPath="/content/dam/huawei-cbg-site"/>
                            <titleImageAlt
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Title Image Alt"
                                name="./titleImageAlt"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Description"
                                name="./description"/>
                        </items>
                    </column>
                </items>
            </basic>
        </items>
    </content>
</jcr:root>
