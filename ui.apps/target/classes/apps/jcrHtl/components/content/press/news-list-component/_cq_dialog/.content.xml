<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="News List Component "
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items
            jcr:primaryType="nt:unstructured"
            sling:hideChildren="[column]">
            <basic
                jcr:primaryType="nt:unstructured"
                jcr:title="Basic"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <limit
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                fieldLabel="Limit"
                                min="{Long}0"
                                name="./limit"
                                value="{Long}10"/>
                            <pageSize
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                fieldLabel="Page List Size"
                                max="{Long}20"
                                min="{Long}0"
                                name="./pageSize"
                                value="{Long}10"/>
                            <apiUrl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Api Url"
                                name="./apiUrl"/>
                            <queryMatch
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Query Match"
                                name="./queryMatch">
                                <items jcr:primaryType="nt:unstructured">
                                    <event
                                        jcr:primaryType="nt:unstructured"
                                        text="Event"
                                        value="consumer_events:no"/>
                                    <news
                                        jcr:primaryType="nt:unstructured"
                                        text="News"
                                        value="consumer_press:consumer_news"/>
                                    <mediacoverage
                                        jcr:primaryType="nt:unstructured"
                                        text="Media Coverage"
                                        value="consumer_press:consumer_media_coverage"/>
                                </items>
                            </queryMatch>
                            <placeHolder
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Place Holder"
                                name="./phText"/>
                            <loadMoreText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Load More Text"
                                name="./lmText"/>
                            <resultNumberText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Result Number Text"
                                name="./rnText"/>
                            <resultSearchText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Result search Text"
                                name="./rsText"/>
                            <act
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="This value is used for Analytics purpose"
                                fieldLabel="Analytics Action (act)"
                                name="./act"/>
                            <lab
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="This value is used for Analytics purpose"
                                fieldLabel="Analytics Label (lab)"
                                name="./lab"/>
                            <noResultsMessage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="No Results Message"
                                name="./noResultsMessage"/>
                            <writeKeywordsMessage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Write Keywords Message"
                                name="./writeKeywordsMessage"/>
                        </items>
                    </column>
                </items>
            </basic>
        </items>
    </content>
</jcr:root>
