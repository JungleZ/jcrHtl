<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Product Menu Module More Products"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <columns
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <contentTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Content"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <moreProductsMenu
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/multifield"
                                        fieldDescription="Click 'Add field' to add a new Field"
                                        fieldLabel="More Products Menu">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                            acs-commons-nested="NODE_STORE"
                                            name="./moreProducts">
                                            <layout
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                method="absolute"/>
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <productCategory
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            fieldDescription="This value is used for Analytics purpose."
                                                            fieldLabel="Product Category"
                                                            name="./productCategory"/>
                                                        <productName
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            fieldLabel="Product Name"
                                                            name="./productName"/>
                                                        <productDesc
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            fieldLabel="Product Description"
                                                            name="./productDesc"/>
                                                        <text-color
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            fieldDescription="Fill color code like #000000"
                                                            fieldLabel="Text Color"
                                                            name="./textColor"
                                                            value="#3C4837"/>
                                                        <productImage
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                            fieldLabel="Product Image"
                                                            name="./productImage"
                                                            rootPath="/content/dam"/>
                                                        <productImageAlt
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            fieldLabel="Product Image Alt"
                                                            name="./productImageAlt"/>
                                                        <background-image
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                            fieldLabel="Background image"
                                                            name="./backgroundImg"
                                                            rootPath="/content/dam/"/>
                                                        <productLink
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                            fieldLabel="Product Link"
                                                            name="./productLink"
                                                            rootPath="/content/huawei-cbg-site"/>
                                                        <linkToText
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            fieldLabel="Link To Text"
                                                            name="./linkToText"/>
                                                        <linkPbi1
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            fieldDescription="tablets:36; wearables:37; mobile-broadband:32; smart-home:33; accessories:38;"
                                                            fieldLabel="Link PBI1 Value"
                                                            name="./linkPbi1"/>
                                                        <pathOfCategoryAdminPage
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                            fieldLabel="Product Root Page Path"
                                                            name="./pathOfCategoryAdminPage"
                                                            rootPath="/content/huawei-cbg-site"/>
                                                        <enableCompare
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/select"
                                                            fieldDescription="This will show compare button in each product."
                                                            fieldLabel="Enable Product Compare"
                                                            name="./enableCompare">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <yes
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Yes"
                                                                    value="true"/>
                                                                <no
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="No"
                                                                    value="false"/>
                                                            </items>
                                                        </enableCompare>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </moreProductsMenu>
                                    <additionalProductsMenu
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/multifield"
                                        fieldDescription="Click 'Add field' to add a new Field"
                                        fieldLabel="Additional Products Menu">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                            acs-commons-nested="NODE_STORE"
                                            name="./additionalProducts">
                                            <layout
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                method="absolute"/>
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <linkToText
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            fieldLabel="Link To Text"
                                                            name="./linkToText"/>
                                                        <linkPbi1
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            fieldDescription="tablets:36; wearables:37; mobile-broadband:32; smart-home:33; accessories:38;"
                                                            fieldLabel="Link PBI1 Value"
                                                            name="./linkPbi1"/>
                                                        <pathOfCategoryAdminPage
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                            fieldLabel="Product Root Page Path"
                                                            name="./pathOfCategoryAdminPage"
                                                            rootPath="/content/huawei-cbg-site"/>
                                                        <enableCompare
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/select"
                                                            fieldDescription="This will show compare button in each product."
                                                            fieldLabel="Enable Product Compare"
                                                            name="./enableCompare">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <yes
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Yes"
                                                                    value="true"/>
                                                                <no
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="No"
                                                                    value="false"/>
                                                            </items>
                                                        </enableCompare>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </additionalProductsMenu>
                                    <back-to-menu
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Back to menu label"
                                        name="./backText"/>
                                    <compare-label
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Compare product label"
                                        name="./compareLabel"/>
                                    <selected-label
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Selected product label"
                                        name="./selectedLabel"/>
                                    <cancel-label
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Load more product label"
                                        name="./loadmoreLabel"/>
                                    <noResultMsg
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="No Result Message"
                                        name="./noResultMsg"/>
                                </items>
                            </columns>
                        </items>
                    </contentTab>
                </items>
            </columns>
        </items>
    </content>
</jcr:root>
