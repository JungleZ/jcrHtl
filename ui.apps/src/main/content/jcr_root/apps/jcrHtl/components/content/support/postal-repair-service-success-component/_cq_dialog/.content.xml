<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Postal Repair Service Success Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <contentTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Content"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Title"
                                fieldLabel="Title"
                                name="./title"/>
                            <successIcon
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="Success Icon"
                                fieldLabel="Success Icon"
                                name="./successIcon"
                                rootPath="/content/dam"/>
                            <successMessage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Success Message"
                                fieldLabel="Success Message"
                                name="./successMessage"/>
                            <hotlineIcon
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="Hotline Icon"
                                fieldLabel="Hotline Icon"
                                name="./hotlineIcon"
                                rootPath="/content/dam"/>
                            <hotlinePhone
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Hotline Phone"
                                fieldLabel="Hotline Phone"
                                name="./hotlinePhone"/>
                            <emailIcon
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="Email Icon"
                                fieldLabel="Email Icon"
                                name="./emailIcon"
                                rootPath="/content/dam"/>
                            <emailText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Email Text"
                                fieldLabel="Email Text"
                                name="./emailText"/>
                            <contactUsUrl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="Contact Us Url"
                                fieldLabel="Contact Us Url"
                                name="./contactUsUrl"
                                rootPath="/content/huawei-cbg-site"/>
                            <content
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldDescription="Content"
                                fieldLabel="Content"
                                name="./content"/>
                        </items>
                    </column>
                </items>
            </contentTab>
        </items>
    </content>
</jcr:root>
